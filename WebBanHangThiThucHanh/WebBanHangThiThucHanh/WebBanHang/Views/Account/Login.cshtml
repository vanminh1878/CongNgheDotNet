@{
    Layout = null;
    var ErrorMessage = TempData["ErrorMessage"] as string;
}
@model AppUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="../../MyLib1/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../MyLib1/assets/vendors/css/vendor.bundle.base.css">

    <link rel="stylesheet" href="../../MyLib1/assets/css/style.css">
    <link rel="shortcut icon" href="../../MyLib1/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">

        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">

                            @if (!string.IsNullOrEmpty(ErrorMessage))
                            {
                                <h4 class="alert alert-danger">
                                    @ErrorMessage
                                </h4>
                            }
                            else
                            {
                                <h4>Đăng nhập</h4>
                            }
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control form-control-lg", placeholder = "Username", required = "required", autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", type = "password", placeholder = "Password" })
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Keep me signed in
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="mb-2">
                                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                        <i class="mdi mdi-facebook me-2"></i>Connect using facebook
                                    </button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Create</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../../MyLib1/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="../../MyLib1/assets/js/off-canvas.js"></script>
    <script src="../../MyLib1/assets/js/hoverable-collapse.js"></script>
    <script src="../../MyLib1/assets/js/misc.js"></script>
</body>
</html>